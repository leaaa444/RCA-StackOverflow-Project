@model StackOverflow.Data.Entities.QuestionEntity

@{
    ViewBag.Title = "Potvrda brisanja";
}

<h2>Obriši Pitanje</h2>

<h3>Da li ste sigurni da želite da obrišete ovo pitanje?</h3>
<div>
    <hr />
    <h4>Pitanje:</h4>
    <dl class="dl-horizontal">
        <dt>
            Naslov
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Naslov)
        </dd>

        <dt>
            Autor
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AutorEmail)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obriši" class="btn btn-danger" /> |
            @Html.ActionLink("Odustani i vrati se na listu", "Index")
        </div>
    }
</div>