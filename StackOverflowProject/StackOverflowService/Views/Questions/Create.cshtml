@model StackOverflow.Data.Entities.QuestionEntity

@{
    ViewBag.Title = "Postavi Novo Pitanje";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Questions", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Podeli svoj problem sa zajednicom.</h4>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2" for="Naslov">Naslov</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Naslov, new { htmlAttributes = new { @class = "form-control", placeholder = "Npr. Kako da popravim NullReferenceException?" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="OpisProblema">Detaljan opis problema</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.OpisProblema, 10, 30, new { @class = "form-control", placeholder = "Opišite detaljno šta ste probali, šta očekujete i kakvu grešku dobijate." })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="slikaGreske">Slika greške/problema</label>
            <div class="col-md-10">
                <input type="file" name="slikaGreske" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Postavi pitanje" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad na listu pitanja", "Index")
</div>