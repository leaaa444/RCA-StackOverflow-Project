@model IEnumerable<StackOverflowService.Models.QuestionWithAnswerCountViewModel>

@{
    ViewBag.Title = "Lista Pitanja";
}

<h2>Lista Svih Pitanja</h2>
@using (Html.BeginForm("Index", "Questions", FormMethod.Get))
{
    <div class="form-inline" style="margin-bottom: 20px;">
        <label>Pretraga po naslovu:</label>
        <input type="text" name="searchString" value="@ViewBag.CurrentSearch" class="form-control" />
        <input type="submit" value="Pretraži" class="btn btn-default" />
    </div>
}

<div style="margin-bottom: 15px;">
    <strong>Sortiraj po:</strong>
    @Html.ActionLink("Datumu", "Index", new { sortBy = "datum" }) |
    @Html.ActionLink("Broju odgovora", "Index", new { sortBy = "odgovori" })
</div>

<p>
    @Html.ActionLink("Postavi Novo Pitanje", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Naslov
        </th>
        <th>
            Autor
        </th>
        <th>
            Datum
        </th>
        <th>
            Odgovori
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question.Naslov)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question.AutorEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question.Timestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerCount)
            </td>
            <td>
                @Html.ActionLink("Detalji", "Details", new { id = item.Question.RowKey })
            </td>
        </tr>
    }

</table>
