@model IEnumerable<StackOverflowService.Models.QuestionWithAnswerCountViewModel>

@{
    ViewBag.Title = "Lista Pitanja";
}

<h2>Lista Svih Pitanja</h2>
@using (Html.BeginForm("Index", "Questions", FormMethod.Get))
{
    <div class="input-group" style="max-width: 500px; margin-bottom: 20px; gap: 10px;">
        <input type="text" name="searchString" value="@ViewBag.CurrentSearch" class="form-control" placeholder="Pretraga po naslovu..." />
        <span class="input-group-btn">
            <input type="submit" value="Pretraži" class="btn btn-default" />
        </span>
    </div>
}

<div class="action-links">
    <div class="sort-options">
        <strong>Sortiraj po:</strong>
        @Html.ActionLink("Datumu", "Index", new { sortBy = "datum" }) |
        @Html.ActionLink("Broju odgovora", "Index", new { sortBy = "odgovori" })
    </div>

    <div>
        @Html.ActionLink("Postavi Novo Pitanje", "Create")
    </div>
</div>


<div class="questions-list">
    @foreach (var item in Model)
    {
        <div class="question-card">
            <div class="question-card-main">
                <div class="question-card-title">
                    @Html.ActionLink(item.Question.Naslov, "Details", new { id = item.Question.RowKey })
                </div>
                <div class="question-card-meta">
                    @item.Question.AutorEmail | @item.Question.Timestamp.ToString("dd.MM.yyyy.")
                </div>
            </div>
            <div class="question-card-stats">
                <div class="stat-number">@item.AnswerCount</div>
                <div class="stat-label">odgovora</div>
            </div>
        </div>
    }
</div>
