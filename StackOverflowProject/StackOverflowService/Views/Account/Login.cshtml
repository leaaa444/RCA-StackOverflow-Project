
@{
    ViewBag.Title = "Prijava";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Prijavite se na sistem.</h4>
        <hr />

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <div class="form-group">
            <label class="control-label col-md-2">Email</label>
            <div class="col-md-10">
                <input type="email" name="email" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Lozinka</label>
            <div class="col-md-10">
                <input type="password" name="lozinka" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Prijavi se" class="btn btn-default" />
            </div>
        </div>
    </div>
}

