@{ ViewBag.Title = "Promena Lozinke"; }
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <h4>Unesite potrebne podatke.</h4>
    <hr />
    if (ViewBag.Error != null)
    { <div class="alert alert-danger">@ViewBag.Error</div> }
if (ViewBag.SuccessMessage != null)
{ <div class="alert alert-success">@ViewBag.SuccessMessage</div> }

<div class="form-group">
    <label class="control-label col-md-2">Stara lozinka</label>
    <div class="col-md-10">
        <input type="password" name="oldPassword" class="form-control" required />
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">Nova lozinka</label>
    <div class="col-md-10">
        <input type="password" name="newPassword" class="form-control" required />
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">Potvrdi novu lozinku</label>
    <div class="col-md-10">
        <input type="password" name="confirmPassword" class="form-control" required />
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Promeni lozinku" class="btn btn-default" />
    </div>
</div>
}