<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="StackOverflowProject" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6">
  <WebRole name="StackOverflowService" vmsize="Standard_D1_v2">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <ConfigurationSettings>
      <Setting name="DataConnectionString" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
      <InternalEndpoint name="HealthCheckEndpoint" protocol="tcp" />
    </Endpoints>
  </WebRole>
  <WorkerRole name="NotificationService" vmsize="Standard_D1_v2">
    <ConfigurationSettings>
      <Setting name="DataConnectionString" />
    </ConfigurationSettings>
    <Endpoints>
      <InternalEndpoint name="HealthCheckEndpoint" protocol="tcp" />
    </Endpoints>
  </WorkerRole>
  <WorkerRole name="HealthMonitoringService" vmsize="Standard_D1_v2">
    <ConfigurationSettings>
      <Setting name="DataConnectionString" />
    </ConfigurationSettings>
  </WorkerRole>
</ServiceDefinition>